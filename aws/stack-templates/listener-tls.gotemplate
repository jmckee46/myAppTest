{{{define "listener-tls"}}}
"ListenerTls": {
  "Type": "AWS::ElasticLoadBalancingV2::Listener",
  "Properties": {
    "Certificates": [
      {
        "CertificateArn": {
          "Ref": "SlTlsCertificateArn"
        }
      }
    ],
    "DefaultActions": [
      {
        "Type": "forward",
        "TargetGroupArn": {
          "Ref": "StatusApiTlsTargetGroup"
        }
      }
    ],
    "LoadBalancerArn": {
      "Ref": "LoadBalancer"
    },
    "Port": "443",
    "Protocol": "HTTPS"
  }
}
{{{end}}}
